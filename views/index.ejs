    <style>
        /* CSS for Chessboard */
.chessboard {
    display: grid;
    grid-template-columns: repeat(8, 1fr);  /* Creates an 8x8 grid */
    grid-template-rows: repeat(8, 1fr);
    width: 400px;
    height: 400px;
    border: 2px solid black;
    margin: 20px auto;  /* Centers the board */
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5); /* Adds shadow around the board */
}

/* Square styles */
.square {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}

/* Light and dark square styles */
.square.light {
    background-color: #f0d9b5;  /* Light tan */
}

.square.dark {
    background-color: #b58863;  /* Dark brown */
}

/* Chess pieces styling */
.piece {
    font-size: 2em;  /* Adjusts the size of the piece */
    cursor: grab;
    user-select: none;
}

/* Draggable piece styling */
.piece:active {
    cursor: grabbing;
    opacity: 0.6;
}

/* Piece colors */
.piece.white {
    color: white;
}

.piece.black {
    color: black;
}

.flipped  {
    transform: rotate(180deg);
}
.flipped .piece {
    transform: rotate(180deg);
}

/* Board responsiveness (optional) */
@media (max-width: 600px) {
    .chessboard {
        width: 300px;
        height: 300px;
    }

    .piece {
        font-size: 1.5em;
    }
}

    </style>

